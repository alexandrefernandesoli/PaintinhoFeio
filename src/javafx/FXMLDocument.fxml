<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.FXMLDocumentController">

    <top>
        <VBox minHeight="60.0" minWidth="600.0">
            <MenuBar minHeight="25.0" minWidth="600.0" prefHeight="25.0" prefWidth="600.0">
                <Menu text="Arquivo">
                    <MenuItem onAction="#onSave" text="Salvar imagem" />
                    <MenuItem onAction="#onOpen" text="Abrir imagem" />
                    <MenuItem onAction="#onExit" text="Sair" />
                </Menu>
            </MenuBar>

            <ToolBar prefWidth="600.0">
                <HBox alignment="CENTER" spacing="5">
                    <ChoiceBox fx:id="selecionaFerramenta" prefWidth="150.0" />
                    <ColorPicker fx:id="selecionaCor" />
                </HBox>
               
                <Slider fx:id="slider" max="100.0" min="1.0" value="2" />
            <Label fx:id="tamanhoLabel" text="2" />
            </ToolBar>
        </VBox>
    </top>
   <center>
      <StackPane fx:id="fundo" minHeight="540.0" prefHeight="600.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="tela" height="600.0" width="600.0" StackPane.alignment="CENTER">
               <StackPane.margin>
                  <Insets />
               </StackPane.margin></Canvas>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </StackPane>
   </center>

</BorderPane>
